<h1>Listing articles</h1>

<table class="condensed-table zebra-striped">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Meta tags</th>
    <th>Meta description</th>
    <th>Image</th>
    <th>Summary</th>
    <th>Slug</th>
    <th>Published on</th>
    <th>Start publication on</th>
    <th>Stop publication on</th>
    <th>Featured</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.body %></td>
    <td><%= article.meta_tags %></td>
    <td><%= article.meta_description %></td>
    <td><%= article.image %></td>
    <td><%= article.summary %></td>
    <td><%= article.slug %></td>
    <td><%= article.published_on %></td>
    <td><%= article.start_publication_on %></td>
    <td><%= article.stop_publication_on %></td>
    <td><%= article.featured %></td>
    <td><%= link_to 'Show', admin_article_path(article) %></td>
    <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    <td><%= link_to 'Destroy', admin_article_path(article), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

